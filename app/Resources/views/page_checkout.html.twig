{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <main role="main" class="container">

        <div class="min-height400">

            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <h1>
                        Оформление заказа
                    </h1>

                    <div class="py-3">
                        <a class="btn btn-outline-info" href="{{ path('shop_cart_edit') }}">
                            <i class="icon-keyboard_arrow_left"></i>
                            {{ 'Edit an order' | trans }}
                        </a>
                    </div>

                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">

                                {{ form_widget(form.options) }}

                            </div>
                            <div class="col-md-6">

                                {{ form_widget(form) }}

                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info btn-lg" name="button-submit">
                                {{ 'Submit order' | trans }}
                            </button>
                        </div>
                    {{ form_end(form) }}

                </div>
            </div>

        </div>

    </main>
{% endblock %}