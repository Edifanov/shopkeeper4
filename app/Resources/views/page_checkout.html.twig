{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <main role="main" class="container">

        <div class="min-height400">

            <div class="row">
                <div class="col-lg-8 offset-lg-2">

                    <h1>
                        Оформление заказа
                    </h1>

                    <div class="py-3">
                        <a class="btn btn-outline-info" href="{{ path('shop_cart_edit') }}">
                            <i class="icon-keyboard_arrow_left"></i>
                            {{ 'Edit an order' | trans }}
                        </a>
                    </div>

                    {{ form_start(form, {'noDeliveryFirst': true, 'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row">
                            <div class="col-md-6">

                                <div class="card bg-light mb-3" id="shkDeliveryAddress">
                                    <div class="card-header">
                                        <span>
                                            {{ 'Delivery address' | trans }}
                                        </span>
                                    </div>
                                    <div class="card-body">
                                        {{ form_widget(form.options) }}
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6">

                                {{ form_widget(form) }}

                            </div>
                        </div>
                        <div class="form-group text-right">
                            <button type="submit" class="btn btn-info btn-lg" name="button-submit">
                                {{ 'Submit order' | trans }}
                            </button>
                        </div>
                    {{ form_end(form) }}

                </div>
            </div>

        </div>

    </main>
{% endblock %}