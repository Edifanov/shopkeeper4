{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <main role="main" class="container">

        <div class="min-height400">

            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <h1>
                        Оформление заказа
                    </h1>

                    <div class="py-3">
                        <a class="btn btn-outline-info" href="{{ path('shop_cart_edit') }}">
                            <i class="icon-keyboard_arrow_left"></i>
                            {{ 'Edit an order' | trans }}
                        </a>
                    </div>

                    <form action="{{ path('page_checkout') }}" method="post">

                        <div class="form-group row">
                            <label for="fieldEmail" class="col-sm-4 col-form-label">
                                Email:
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="fieldEmail" name="email" value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="fieldName" class="col-sm-4 col-form-label">
                                Ф.И.О.:
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="fieldName" name="name" value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="fieldAddress" class="col-sm-4 col-form-label">
                                Адрес:
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="fieldAddress" name="address" value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="fieldComment" class="col-sm-4 col-form-label">
                                Комментарий:
                            </label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="fieldComment" rows="4" name="address"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-lg" type="submit">
                                Отправить заказ
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>

    </main>
{% endblock %}