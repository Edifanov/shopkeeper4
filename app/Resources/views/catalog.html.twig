{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <main role="main" class="container">

        {% include 'nav/breadcrumbs.html.twig' %}

        <div class="min-height400">

            <h1>{{ currentPage.title }}</h1>

            {% include 'nav/child-categories-menu.html.twig' %}

            {% include 'nav/siblings-menu.html.twig' %}

            {% if items | length == 0 and categoriesMenu | length == 0 %}
                <div class="alert alert-info">
                    {{ 'This category is empty' | trans }}.
                </div>
            {% else %}

                {% if items | length > 0 %}
                    {% include 'nav/catalog-sort.html.twig' %}
                {% endif %}

                <div class="row">

                    {% for item in items %}
                        {% if listTemplate == 'grid' %}
                            <div class="col-6 col-lg-4">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        {% autoescape false %}
                                            {{ item | outputTypeArray(fields) }}
                                        {% endautoescape %}
                                    </div>
                                </div>
                            </div>
                        {% elseif listTemplate == 'list' %}
                            <div class="col-12">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="catalog-list-item">
                                            <div class="catalog-list-item-inner">
                                                {% autoescape false %}
                                                    {{ item | outputTypeArray(fields) }}
                                                {% endautoescape %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                </div>
            {% endif %}

            {% if items | length > 0 %}
                {% include 'nav/pagination.html.twig' %}
            {% endif %}

        </div>

    </main>
{% endblock %}
