{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <main role="main" class="container">

        {% include 'nav/breadcrumbs.html.twig' %}

        <div class="min-height400">

            <h1>{{ currentPage.title }}</h1>

            {% include 'nav/child-categories-menu.html.twig' %}

            {% include 'nav/siblings-menu.html.twig' %}

            {% if items | length == 0 and categoriesMenu | length == 0 %}
                <div class="alert alert-info">
                    {{ 'This category is empty' | trans }}.
                </div>
            {% else %}

                {% if items | length > 0 %}
                    {% include 'nav/catalog-sort.html.twig' %}
                {% endif %}

                <div class="row">

                    {% for item in items %}
                        <div class="col-6 col-lg-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    {% autoescape false %}
                                        {{ item | outputTypeArray(fields) }}
                                    {% endautoescape %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            {% endif %}

            {% if items | length > 0 %}
                {% include 'nav/pagination.html.twig' %}
            {% endif %}

        </div>

    </main>
{% endblock %}
