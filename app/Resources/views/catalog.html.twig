{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <main role="main" class="container">
        <div class="row">
            <div class="col-12 col-md-3">

                <div class="list-group mb-3">
                    {% for category in childCategories %}
                        <a href="{{ catalogPath(category.uri) }}" class="list-group-item list-group-item-action">
                            {{ category.title }}
                        </a>
                    {% endfor %}
                </div>

            </div>
            <div class="col-12 col-md-9">

                <div class="btn-group btn-breadcrumb mb-3">
                    <a href="{{ catalogPath('', '/') }}" class="btn btn-secondary">
                        <i class="icon-home"></i>
                    </a>
                    <a href="#" class="btn btn-secondary">Snippets</a>
                    <a href="#" class="btn btn-secondary">Breadcrumbs</a>
                    <a href="#" class="btn btn-secondary">Default</a>
                </div>

                <h1>
                    {{ currentPage.title }}
                </h1>

                <div class="row">

                    {% for item in childs %}
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                {% if fields.title is not empty %}
                                    <h4 class="card-title">{{ item[fields.title] }}</h4>
                                {% endif %}
                                {% if fields.description is not empty %}
                                    <p class="card-text">
                                        {{ item[fields.description] }}
                                    </p>
                                {% endif %}
                                {% if fields.name is not empty %}
                                    <a href="{{ catalogPath(currentCategory.uri, item[fields.name]) }}" class="btn btn-primary">
                                        Details
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </main>
{% endblock %}
