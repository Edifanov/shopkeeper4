<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    <base href="{{ app.request.baseUrl }}">

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% block stylesheets -%}
        {% stylesheets
            'shk-app/node_modules/bootstrap/dist/css/bootstrap.min.css'
            'shk-app/node_modules/nouislider/distribute/nouislider.min.css'
            'shk-app/css/icomoon/style.css'
            'shk-app/css/styles.css'
            filter='minifycsscompressor'
            output='css/app.min.css'%}{% endstylesheets %}
        <link href="{{ asset('css/app.min.css') }}" rel="stylesheet">
    {% endblock %}

</head>
<body>

{% block body %}{% endblock %}

{% block javascripts %}
    {% javascripts
        'shk-app/node_modules/jquery/dist/jquery.min.js'
        'shk-app/node_modules/popper.js/dist/umd/popper.min.js'
        'shk-app/node_modules/bootstrap/dist/js/bootstrap.min.js'
        'shk-app/node_modules/wnumb/wNumb.js'
        'shk-app/node_modules/nouislider/distribute/nouislider.min.js'
        'shk-app/js/shopkeeper.js'
        filter='jsmin'
        output='js/app.min.js' %}{% endjavascripts %}

    <script src="{{ asset('js/app.min.js') }}"></script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
        var shk = new Shopkeeper();
    </script>
{% endblock %}

{% block footer %}
    <div class="footer border-top mt-3">
        <div class="container">
            <div class="float-right p-2">
                <a href="http://modx-shopkeeper.ru/" target="_blank">
                    <img src="{{ asset('img/shk-logo-small-gray.png') }}" width="120" alt="Shopkeeper 4">
                </a>
            </div>
            <div class="py-3 text-muted">
                {{ app_name }} &copy; 2018
            </div>
        </div>
    </div>
    {% if app.request.attributes.get('_route') not in ['shop_cart_edit'] %}
        {{ shopCart('shop_cart') }}
    {% endif %}
{% endblock %}

</body>
</html>