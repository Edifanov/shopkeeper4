{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="p-3">
        <app-root><div id="page-preloader" class="loading"></div></app-root>
    </div>
    <div class="px-3 pb-3">
        <a href="{{ path('console') }}" target="_blank">{{ 'Console' | trans }}</a>
    </div>
{% endblock %}

{% block stylesheets %}
    {% if app.environment == 'prod' %}
        <link href="{{ asset('shk-app/bundle/styles.7661cc6fb9bf41b761a3.bundle.css') }}" rel="stylesheet">
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script>
        var appSettings = {
            appName: '{{ app_name }}',
            webApiUrl: '{{ app.request.baseUrl }}',
            environment: '{{ app.environment }}',
            filesDirUrl: '{{ settings.filesDirUrl }}',
            locale: '{{ settings.locale }}',
            rolesHierarchy: {{ settings.rolesHierarchy | json_encode() | raw }},
            systemSettings: {{ settings.systemSettings | json_encode() | raw }}
        };
    </script>
    <script type="text/javascript" src="/shk-app/i18n/{{ settings.locale }}.js"></script>
    {% if app.environment == 'prod' %}
        <script type="text/javascript" src="{{ asset('shk-app/bundle/inline.263c099ec7989922f12d.bundle.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle/polyfills.d0585b9258099ba9cb37.bundle.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle/scripts.abc521399cddc9dfff22.bundle.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle/main.111f0682fe1e4443b75b.bundle.js') }}"></script>
    {% else %}
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/inline.bundle.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/polyfills.bundle.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/styles.bundle.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/scripts.bundle.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/vendor.bundle.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/main.bundle.js') }}"></script>
    {% endif %}
{% endblock %}
