{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="p-3">
        <app-root><div id="page-preloader" class="loading"></div></app-root>
    </div>
{% endblock %}

{% block stylesheets %}
    {% if app.environment == 'prod' %}
        <link href="{{ asset('shk-app/bundle/styles.ad682e35b9f951fda428.css') }}" rel="stylesheet">
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script>
        var global = global || window;
        var process = process || {
            env: { DEBUG: undefined },
            version: []
        };
        var appSettings = {
            appName: '{{ app_name }}',
            webApiUrl: '{{ app.request.baseUrl }}',
            environment: '{{ app.environment }}',
            filesDirUrl: '{{ settings.filesDirUrl }}',
            locale: '{{ settings.locale }}',
            rolesHierarchy: {{ settings.rolesHierarchy | json_encode() | raw }},
            systemSettings: {{ settings.systemSettings | json_encode() | raw }}
        };
    </script>
    <script type="text/javascript" src="/shk-app/i18n/{{ settings.locale }}.js"></script>
    {% if app.environment == 'prod' %}
        <script type="text/javascript" src="{{ asset('shk-app/bundle/runtime.1001d1ee21ca26c31396.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle/polyfills.2b9460d7868d7073e60e.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle/scripts.abc521399cddc9dfff22.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle/main.4f4ba1c7085aade2ab35.js') }}"></script>
    {% else %}
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/runtime.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/polyfills.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/styles.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/scripts.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/vendor.js') }}"></script>
        <script type="text/javascript" src="{{ asset('shk-app/bundle-dev/main.js') }}"></script>
    {% endif %}
{% endblock %}
