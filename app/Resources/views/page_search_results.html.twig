{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <main role="main" class="container">

        <div class="min-height400">

            <h1>
                {{ 'Searching results' | trans }}
            </h1>

            <div class="card card-body bg-light mb-3">
                <form class="d-block m-0" action="{{ path('search_results') }}" method="get" id="formSearch">
                    <div class="input-group input-group-lg">
                        <input type="text" class="form-control" placeholder="{{ 'Search' | trans }}..." name="query" value="{{ app.request.get('query') }}">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="icon-search"></i>
                                {{ 'Search' | trans }}
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            {% if totalItems is defined and totalItems > 0 %}

                <p>
                    {{ '%count% product found|%count%  products found' | transchoice(totalItems) }}.
                </p>

                {% for item in items %}
                    <div class="card card-body mb-3">
                        <div class="catalog-list-item">
                            <div class="catalog-list-item-inner">
                                {{ renderOutputTypeChunk(item, fieldsAll, 'tag', 'list_') }}
                                {{ renderOutputTypeChunk(item, fieldsAll, 'image') }}
                                {{ renderOutputTypeChunk(item, fieldsAll, 'header') }}
                                {{ renderOutputTypeChunk(item, fieldsAll, 'description') }}
                                {{ renderOutputTypeChunk(item, fieldsAll, 'price') }}
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {% include 'nav/pagination.html.twig' %}

            {% else %}
                <div class="alert alert-info">
                    {{ 'search.nothing_found' | trans }}
                </div>
            {% endif %}

        </div>

    </main>
{% endblock %}
