{% if pagesOptions.total > 0 %}
    {% set pagesUrl = catalogPath(currentUri) ~ '?limit=' ~ pagesOptions.limit ~ '&page=' %}
    <nav>
        <ul class="pagination">
            {% if pagesOptions.current != pagesOptions.prev %}
                <li class="page-item">
                    <a class="page-link" href="{{ pagesUrl }}{{ pagesOptions.prev }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            {% endif %}
            {% for i in 1..pagesOptions.total %}
                <li class="page-item{% if i == pagesOptions.current %} active{% endif %}">
                    <a class="page-link" href="{{ pagesUrl }}{{ i }}">
                        {{ i }}
                    </a>
                </li>
            {% endfor %}
            {% if pagesOptions.current != pagesOptions.next %}
                <li class="page-item">
                    <a class="page-link" href="{{ pagesUrl }}{{ pagesOptions.next }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}