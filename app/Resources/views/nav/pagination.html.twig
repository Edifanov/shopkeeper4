{% import "macro.html.twig" as macro %}
<div>
    {% if pagesOptions.pageSizeArr | length > 1 %}
        <div class="float-right">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-end">
                    {% for pageSize in pagesOptions.pageSizeArr %}
                        <li class="page-item{% if pageSize == pagesOptions.limit %} active{% endif %}">
                            <a class="page-link" href="{{ macro.pageUrl(catalogPath(currentUri), pageSize, pagesOptions.current, queryOptions.order_by) }}">{{ pageSize }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    {% endif %}
    {% if pagesOptions.total > 1 %}
        <nav>
            <ul class="pagination pagination-rounded">
                {% if pagesOptions.current != pagesOptions.prev %}
                    <li class="page-item">
                        <a class="page-link" href="{{ macro.pageUrl(catalogPath(currentUri), pagesOptions.limit, pagesOptions.prev, queryOptions.order_by) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                {% endif %}
                {% for i in 1..pagesOptions.total %}
                    <li class="page-item{% if i == pagesOptions.current %} active{% endif %}">
                        <a class="page-link" href="{{ macro.pageUrl(catalogPath(currentUri), pagesOptions.limit, i, queryOptions.order_by) }}">
                            {{ i }}
                        </a>
                    </li>
                {% endfor %}
                {% if pagesOptions.current != pagesOptions.next %}
                    <li class="page-item">
                        <a class="page-link" href="{{ macro.pageUrl(catalogPath(currentUri), pagesOptions.limit, pagesOptions.next, queryOptions.order_by) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
    <div class="clearfix"></div>
</div>