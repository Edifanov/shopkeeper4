<ul class="menu-dropdown navbar-nav mr-auto">
    {% for category in children %}
        <li class="nav-item{% if category.children|length > 0 %} parent{% endif %}">
            <a href="{{ catalogPath(category.uri) }}" class="nav-link">
                {{ category.title }}
            </a>
            {% autoescape false %}
                {{ categoriesTree(0, 'menu_dropdown_child', category) }}
            {% endautoescape %}
        </li>
    {%  endfor %}
</ul>