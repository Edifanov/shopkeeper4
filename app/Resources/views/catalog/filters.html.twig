<!-- filters -->
<div class="catalog-filters" id="catalog-filters">
    <form action="" method="get">

        <div class="d-block d-md-none">
            <button class="btn btn-secondary btn-block shk-button-filters-hide" type="button">
                <i class="icon-keyboard_arrow_left"></i>
                {{ 'Hide Filters' | trans }}
            </button>
            <hr>
        </div>

        <div class="filters-button-apply shk-onfilter-change" style="display: none;">
            <button class="btn btn-secondary btn-block" type="submit">
                {{ 'Apply' | trans }}
            </button>
        </div>

        {% for filter in filters %}
            <div class="filter-block">
                <h4>
                    {{ filter.title }}
                </h4>
                <div class="my-2">
                    {% autoescape false %}
                        {{ outputFilter( filter ) }}
                    {% endautoescape %}
                </div>
            </div>
            <hr>
        {% endfor %}

    </form>
</div>
<!-- /filters -->