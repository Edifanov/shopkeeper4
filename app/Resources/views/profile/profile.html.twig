{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}

    <main role="main" class="container">
        <h1>{{ 'Profile' | trans }}</h1>

        <div class="min-height400">

            <div class="row">
                <div class="col-md-4">
                    <div class="list-group mb-3" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action{% if app.request.attributes.get('_route') == 'profile_history_orders' %} active{% endif %}" href="{{ path('profile_history_orders') }}">
                            {{ 'History of orders' | trans }}
                        </a>
                        <a class="list-group-item list-group-item-action{% if app.request.attributes.get('_route') == 'profile_contacts' %} active{% endif %}" href="{{ path('profile_contacts') }}">
                            {{ 'Contact details' | trans }}
                        </a>
                        <a class="list-group-item list-group-item-action{% if app.request.attributes.get('_route') == 'profile_change_password' %} active{% endif %}" href="{{ path('profile_change_password') }}">
                            {{ 'Change password' | trans }}
                        </a>
                    </div>
                </div>
                <div class="col-md-8">

                    {% block content %}{% endblock %}

                </div>
            </div>

        </div>
    </main>

{% endblock %}