{% extends 'base.html.twig' %}

{% block body %}

    <div class="container p-5">

        <div class="row justify-content-md-center">
            <div class="col col-md-6">

                <div>
                    {{ app_name }}
                </div>

                <hr>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error | trans({}, 'validators') }}
                    </div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">{{ 'Email' | trans }}</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'Password' | trans }}</label>
                        <input type="password" class="form-control" id="password" name="_password">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" checked>
                        <label for="remember_me">{{ 'Keep me logged in' | trans }}</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" name="login">
                            {{ 'Log in' | trans }}
                        </button>
                    </div>
                </form>

                <hr>
                <p>
                    <a href="{{ path('homepage') }}">
                        {{ 'Go to home page' | trans }}
                    </a>
                    &nbsp;&bull;&nbsp;
                    <a href="{{ path('register') }}">
                        {{ 'Sign up' | trans }}
                    </a>
                </p>

            </div>
        </div>

    </div>

{% endblock %}

{% block footer %}{% endblock %}