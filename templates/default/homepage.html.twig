{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}

    <main role="main" class="container">
        <h1>{{ 'Home page' | trans }}</h1>

        <div class="min-height400">

            <div class="card bg-light">
                <div class="card-body">
                    <h4 class="card-title">
                        {{ 'Catalog' | trans }}
                    </h4>
                    <hr>
                    <div class="card-text">
                        <p>
                            {{ 'Total Categories' | trans }}: <b>{{ countCategories }}</b>
                        </p>
                        <p>
                            {{ 'Total products' | trans }}: <b>{{ countProducts }}</b>
                        </p>
                    </div>
                    {% if categoriesTopLevel|length > 0 %}
                        <a href="{{ app.request.baseUrl }}/{{ categoriesTopLevel[0].uri }}" class="btn btn-primary">
                            {{ 'Go to product catalog' | trans }}
                        </a>
                    {% endif %}
                </div>
            </div>

            {{ contentList(
                'content_list_novelty',
                'products',
                {"isActive": true, "tags": {"$elemMatch": {"$in": ["Новинка"]}}},
                {"_id": "desc"},
                20, 4, 'homepage_novelty', 'hn_page', 'hn_limit',
                {"headerFieldName": "title"}
            ) }}

            <div class="py-3">
                {{ description | raw }}
            </div>

        </div>
    </main>
{% endblock %}
