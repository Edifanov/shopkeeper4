{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="p-3">
        <app-root><div id="page-preloader" class="loading"></div></app-root>
    </div>
{% endblock %}

{% block stylesheets %}
    {% if app.environment == 'prod' %}
        <link href="{{ asset('admin/bundle/styles.a92d731d9a5aa8039bf1.css') }}" rel="stylesheet">
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ path('admin_settings_script') }}?time={{ date().timestamp }}"></script>
    <script type="text/javascript" src="/admin/i18n/{{ settings.locale }}.js?v={{ app_version }}"></script>
    {% if app.environment == 'prod' %}
        <script type="text/javascript" src="{{ asset('admin/bundle/runtime.2f4682e29d1586dae1f9.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/bundle/polyfills.b7c50c0163bf26fc354e.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/bundle/scripts.abc521399cddc9dfff22.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/bundle/main.3cd19f2c6ea72e57979e.js') }}"></script>
    {% else %}
        <script type="text/javascript" src="{{ asset('admin/bundle-dev/runtime.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/bundle-dev/polyfills.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/bundle-dev/styles.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/bundle-dev/scripts.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/bundle-dev/vendor.js') }}"></script>
        <script type="text/javascript" src="{{ asset('admin/bundle-dev/main.js') }}"></script>
    {% endif %}
{% endblock %}
